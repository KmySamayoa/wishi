<h1>This is the index view for Blog</h1>
<% @blog.each do |blog| %>
  <div>
    <h3><%= link_to blog.title, blog %></h3>
    <p>Published on <%= blog.created_at.strftime('%b %d, %Y') %></p>
    <p>Filed under: <% blog.categories.each do |category| %>
    <%= link_to category.name, category %>&nbsp;
  <% end %>
    </p>
    <p><%= truncate(blog.content, length: 200) %></p>
  </div>
<% end %>