<h1>Listing blogs</h1>
<table class="table">

</table>
 
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  
   <thead>
    <tr>
      <th>Text</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
   <% @blogs.each do |blog| %>
      <th>
    <td><%= blog.title %></td>
    <td><%= blog.text %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
